@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;



<div class="main-menu menu-fixed menu-light menu-accordion    menu-shadow " data-scroll-to-active="true" data-img="/member/theme-assets/images/backgrounds/02.jpg">
    <div class="navbar-header">
        <ul class="nav navbar-nav flex-row">
            <li class="nav-item mr-auto">
                <a class="navbar-brand" asp-action="Index" asp-controller="Dashboard">
                    <img class="brand-logo" alt="Chameleon admin logo" src="~/member/theme-assets/images/logo/logo.png" />
                    <h3 class="brand-text">Chameleon</h3>
                </a>
            </li>
            <li class="nav-item d-md-none"><a class="nav-link close-navbar"><i class="ft-x"></i></a></li>
        </ul>
    </div>
    <div class="main-menu-content">
        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
            <li class=" nav-item @MenuHelper.IsActiveMenu(ViewContext,"Dashboard")">
                <a asp-action="Index" asp-controller="Dashboard" asp-area="Member">
                    <i class="ft-home"></i>
                    <span class="menu-title" data-i18n="">@localizer["Dashboard"]</span>
                </a>
            </li>

            <li class=" nav-item @MenuHelper.IsActiveMenu(ViewContext,"Destination")">
                <a asp-action="Index" asp-controller="Destination" >
