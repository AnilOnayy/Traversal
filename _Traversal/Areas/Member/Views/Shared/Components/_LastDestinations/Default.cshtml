@using _Traversal.Areas.Member.Models.Dashboard;
@model List<DashboardLastDestinationsViewModel>;

@{
    var desc = "";
}

@section Css{
            qwdqlwkmdqwlknlwqkdnlwqndlkqw
    <style>
        .img-cover {
            object-fit: cover !important;
            width: 100% !important;
            max-height: 150px;
        }
    </style>
}




<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-1">Son Rotalar</h6>
            <p class="text-sm">Traversal Şirketinin Son Eklenen Rotaları</p>
        </div>
        <div class="card-body p-3">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="@item.CoverImage" alt="img-blur-shadow" class="img-fluid img-cover shadow border-radius-xl">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">
                                <p class="text-gradient text-dark mb-2 text-sm">Rota #@item.DestinationId</p>
                                <a href="javascript:;">
                                    <h5>
                                        @item.City
                                    </h5>
                                </a>
                                <p class="mb-4 text-sm">
                                    @{
                                        desc = item.Description.Length > 120 ? item.Description.Substring(0, 120).ToString() + "..." : item.Description;
                                    }
                                    @desc
                                </p>
                                <div class="d-flex align-items-center justify-content-between">
                                    <a asp-action="Detail" asp-route-id="@item.DestinationId" asp-controller="Destination" asp-area="" class="btn btn-outline-primary btn-sm mb-0">Rotayı Görüntüle</a>
                                    <div class="avatar-group mt-2">
                                        <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Guide.Name">
                                            <img alt="Image placeholder" src="/@item.Guide.Image">
                                        </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
