@model List<Reservation>
@{
    ViewData["Title"] = "Aktif Rezarvasyonlar";
}

@if (!Model.Any())
{
    <h2>Henüz Reddedilen Rezervasyonunuz Yok.</h2>
}
else
{

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>City</td>
                <td>Kişi Sayısı</td>
                <td>Tarih</td>
                <td>Açıklama</td>
                <td>Durum</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Destination.City</td>
                    <td>@x.PersonCount</td>
                    <td>@x.ReservationDate.ToShortDateString()</td>
                    <td>@x.Description</td>
                    <td>@x.Status</td>
                </tr>
            }
        </tbody>
    </table>

}
