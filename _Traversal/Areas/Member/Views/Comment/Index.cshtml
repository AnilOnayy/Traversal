@{
    ViewData["Title"] = "Yorumlarım";
}

@model List<Comment>



<section>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Yorumlarım </h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis font-medium-3"></i></a>

                </div>
                <div class="card-content collapse show">
                    <div class="card-body">




                        @if (!Model.Any())
                        {
                            <h2>Henüz yorum yapmadınız.</h2>
                        }
                        else
                        {

                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <td>Yorum</td>
                                        <td>Yorum Tarihi</td>
                                        <td>Tur</td>
                                        <td>Sil</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int count = 0;
                                    }
                                    @foreach (var x in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@x.CommentContent</td>
                                            <td>@x.CommentDate</td>
                                            <td><a class="btn btn-warning" target="_blank" asp-action="Detail" asp-controller="Destination" asp-area="" asp-route-id="@x.DestinationId">@x.Destination.City</a> </td>
                                            <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@x.Id">Sil</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

