@using _Traversal.Areas.Admin.Models;
@model IEnumerable<BookingOtelSearchViewModel.Result>

<h1>Booking Otel Rezervasyon Sayfası</h1>
<h3>Arama Yapılan Şehir : Paris/Fransa</h3>


<table class="table table-strpied">
    <thead>
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Değerlendimesi</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach(var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <th><img src="@item.max_photo_url" style="width:100px;height:100px;object-fit:cover" /></th>
                <td>@item.hotel_name</td>
                <td>@item.review_score</td>
                <td>@item.review_score_word</td>
                <td><a href="@item.url" class="btn btn-danger">Detaylar</a> </td>
            </tr>
        }
    </tbody>
</table>