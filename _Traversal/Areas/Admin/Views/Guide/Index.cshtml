@model List<Guide>

<h4>Tur Rehberlerimiz</h4>

<a asp-action="Add" asp-controller="Guide" class="my-3 btn btn-primary">Rehber Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Ad Soyad</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sayac = 0;
        }
        @foreach (var x in Model)
        {
            sayac++;

            <tr>
                <td>@sayac</td>
                <td><img class="rounded-circle"  src="~/@x.Image" style="width:100px;height:100px;object-fit:cover" /></td>
                <td>@x.Name</td>
                <td>@x.Description</td>
                <td>

                    @if (x.Status == true)
                    {
                        <a class="btn btn-warning" asp-action="ChangeStatus" asp-controller="Guide" asp-route-id="@x.GuideId">Pasif Et</a>
                    }
                    else
                    {
                        <a class="btn btn-success" asp-action="ChangeStatus" asp-controller="Guide" asp-route-id="@x.GuideId">Aktif Et</a>
                    }
                </td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Guide" asp-route-id="@x.GuideId">Sil</a></td>
                <td><a class="btn btn-info" asp-action="Update" asp-controller="Guide" asp-route-id="@x.GuideId">Güncelle</a></td>

            </tr>
        }
    </tbody>
</table>