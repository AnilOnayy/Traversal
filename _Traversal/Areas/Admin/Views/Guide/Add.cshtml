@model Guide

<form asp-action="Add" asp-controller="Guide" method="POST" enctype="multipart/form-data">

    <div class="mb-2">
        <label asp-for="Name" class="form-label">Rehber Adı</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="mb-2">
        <label asp-for="TwitterUrl" class="form-label">Twitter URL</label>
        <input class="form-control" asp-for="TwitterUrl" />
        <span asp-validation-for="TwitterUrl"></span>
    </div>
    <div class="mb-2">
        <label asp-for="InstagramUrl" class="form-label">Instagram URL</label>
        <input class="form-control" asp-for="InstagramUrl" />
        <span asp-validation-for="InstagramUrl"></span>
    </div>

    <div class="mb-2">
        <label asp-for="FormImage" class="form-label">Rehber Görseli</label>
        <input type="file" required  asp-for="FormImage" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-4">Ekle</button>

</form>


<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml"></partial>