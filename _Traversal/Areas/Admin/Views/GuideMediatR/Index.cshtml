@using _Traversal.CQRS.Results.Guide;
@model List<GetAllGuideQueryResult>

<h1>CQRS MediatR Rehber Listesi</h1>

<a asp-action="Add" class="btn btn-success my-3">Yeni Rehber Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Görsel</th>
            <th>Adı</th>
            <th>Desc</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    @foreach(var item in Model)
    {
       <tr>
            <th>@item.GuideId</th>
            <td><img src="~/@item.Image" style="width:50px;height:50px;" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a asp-action="Delete" asp-route-id="@item.GuideId" class="btn btn-outline-danger">Sil</a></td>
            <td><a asp-action="Update" asp-route-id="@item.GuideId" class="btn btn-outline-secondary">Güncelle</a></td>
       </tr>
    }

</table>