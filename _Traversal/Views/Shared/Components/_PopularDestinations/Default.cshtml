@model List<Destination>
@{
    string description;
}

<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Ziyaret Et</h6>
            <h3 class="hny-title">Popüler Rotalar</h3>
        </div>
        <div class="row bottom-ab-grids">
            <!--/row-grids-->
            @foreach (var d in Model)
            {
                <div class="col-lg-6 subject-card mt-lg-0 mt-4 mb-2">
                    <div class="subject-card-header p-4">
                        <a asp-route="DestinationDetail" asp-route-id="@d.DestinationId" class="card_title p-lg-4d-block">
                            <div class="row align-items-center">
                                <div class="col-sm-5 subject-img">
                                    <img src="@d.CoverImage" class="img-fluid" alt="@d.City">
                                </div>
                                <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                                    <h4>@d.City</h4>
                                    <p>@d.DayNight</p>
                                    <div class="dst-btm">
                                        <h6 class="">Başlangıç Fiyatı : </h6>
                                        <span>@d.Price ₺</span>
                                    </div>
                                    <p class="sub-para">
                                        @{
                                            description = d.Description.Length > 50 ? d.Description.Substring(0, 50) + "..." : d.Description;
                                        }
                                        @description
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>